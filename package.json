{
  "name": "dionysus",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "generate:resolvers": "graphqlgen",
    "dev:refresh": "yarn run dev:down && yarn run dev:up",
    "dev:up": "docker-compose up --build",
    "dev:down": "docker-compose down",
    "start:dev": "docker-compose start",
    "stop:dev": "docker-compose stop",
    "start": "serverless offline start --host 0.0.0.0 --port 3000",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "apollo-server-lambda": "^2.5.0-rc.0",
    "bufferutil": "^4.0.1",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "merge-graphql-schemas": "^1.5.8",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.1",
    "@types/node": "^8.0.57",
    "graphqlgen": "^0.6.0-rc9",
    "serverless-offline": "^5.0.1",
    "serverless-webpack": "^5.1.1",
    "source-map-support": "^0.5.6",
    "ts-loader": "^4.2.0",
    "typescript": "^2.9.2",
    "webpack": "^4.5.0"
  },
